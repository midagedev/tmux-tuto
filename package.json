{
  "name": "tmux-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "vm:build": "./scripts/build-vm-image.sh",
    "vm:state:generate": "node scripts/generate-vm-initial-state.mjs",
    "generate:og": "node scripts/generate-og-images.mjs",
    "generate:share-meta": "node scripts/generate-share-meta-pages.mjs",
    "verify:kpi-routes": "node scripts/verify-kpi-route-map.mjs",
    "verify:coverage-matrix": "node scripts/check-coverage-matrix.mjs",
    "benchmark:simulator": "vite-node scripts/benchmark-simulator.ts",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "build:app": "tsc -b && vite build && node scripts/patch-404-base.mjs",
    "build": "npm run generate:og && npm run generate:share-meta && npm run build:app",
    "build:gh": "npm run generate:og && npm run generate:share-meta && VITE_BASE_PATH=/tmux-tuto/ npm run build:app",
    "build:cf": "npm run generate:og && npm run generate:share-meta && VITE_BASE_PATH=/ npm run build:app",
    "lint": "eslint .",
    "preview": "vite preview",
    "i18n:extract": "node scripts/extract-i18n-sentences.mjs",
    "i18n:verify": "node scripts/verify-i18n-locales.mjs",
    "i18n:check": "npm run i18n:extract && npm run i18n:verify"
  },
  "dependencies": {
    "@microsoft/clarity": "^1.0.2",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "i18next": "^25.8.11",
    "idb": "^8.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.13.0",
    "v86": "^0.5.319",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "fake-indexeddb": "^6.2.5",
    "globals": "^15.9.0",
    "sharp": "^0.34.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vitest": "^1.6.1"
  }
}
